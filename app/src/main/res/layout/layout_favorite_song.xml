<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewFavoriteSong"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY" />
    <TextView
        android:text="Tên bài hát"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/imageViewFavoriteSong"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/txtFavoriteSongTenBH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:text="Ca Sĩ"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageViewFavoriteSong"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/txtFavoriteSongTenBH"
        android:id="@+id/txtFavoriteSongTenCasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageViewFavoriteSongLove"
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>